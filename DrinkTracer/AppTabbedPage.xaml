<?xml version="1.0" encoding="utf-8"?>

<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
            xmlns:viewPages="clr-namespace:DrinkTracer.ViewPages"
            android:TabbedPage.ToolbarPlacement="Bottom"
            x:Class="DrinkTracer.AppTabbedPage">
    
    <NavigationPage Title="Drinks" IconImageSource="beer.svg">
        <x:Arguments>
            <viewPages:DrinksPage />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Bills" IconImageSource="bills.svg">
        <x:Arguments>
            <viewPages:BillsPage />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Groceries" IconImageSource="shopping.svg">
        <x:Arguments>
            <viewPages:GroceriesPage />
        </x:Arguments>
    </NavigationPage>
    
</TabbedPage>